<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#4CAF50" /> <!-- Màu nền khi nhấn -->
            <stroke
                android:width="2dp"
                android:color="#388E3C" /> <!-- Viền khi nhấn -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" /> <!-- Màu nền bình thường -->
            <stroke
                android:width="2dp"
                android:color="#BDBDBD" /> <!-- Viền bình thường -->
        </shape>
    </item>

</selector>
