<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header: Avatar + Username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

<!--        <ImageView-->
<!--            android:id="@+id/itemImage2"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginEnd="12dp"-->
<!--            android:clipToOutline="true"-->
<!--            android:outlineProvider="background"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/avthehe"-->
<!--            android:background="@drawable/rounded_button"/>-->


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemImage23"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avthehe"
            app:strokeColor="#000000"

        app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />


        <TextView
            android:id="@+id/itemText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phúc Bùi"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/menuImage"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/dots" />
    </LinearLayout>

    <!-- Content Text -->
    <TextView
        android:id="@+id/titletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mình mới ăn trộm được ít đồ bạn nào cần mình pass lại ạ"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Main Image -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/avthehe" />

    <!-- Action Buttons -->
    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Like Button -->
        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/heart"
            android:contentDescription="Like" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.200"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Comment Button -->
        <ImageView
            android:id="@+id/commentBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/chat"
            android:contentDescription="Chat" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="300"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Khoảng trống đẩy phần tử cuối cùng sang phải -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Chat Button -->
        <ImageView
            android:id="@+id/chatBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/message"
           />

        <TextView

            android:id="@+id/TextChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Liên hệ"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>